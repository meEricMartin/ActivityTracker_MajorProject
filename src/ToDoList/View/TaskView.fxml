<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="308.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/8.0.161">
    <center>
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="236.0"
              prefWidth="347.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                      prefHeight="30.0" prefWidth="350.0" spacing="20.0">
                    <children>
                        <Label prefHeight="30.0" prefWidth="63.0" text="DueDate"/>
                        <DatePicker fx:id="DatePicker" prefHeight="80.0" prefWidth="281.0">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </DatePicker>
                    </children>
                </HBox>
                <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                      prefHeight="30.0" prefWidth="350.0" spacing="20.0">
                    <children>
                        <Label prefHeight="30.0" prefWidth="126.0" text="Title"/>
                        <TextField fx:id="TitleLabel" prefHeight="30.0" prefWidth="343.0"/>
                    </children>
                </HBox>
                <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                      prefHeight="30.0" prefWidth="350.0" spacing="20.0">
                    <children>
                        <Label prefHeight="30.0" prefWidth="129.0" text="\% Complete"/>
                        <Slider fx:id="CompletenessSlider" prefHeight="30.0" prefWidth="319.0"/>
                    </children>
                </HBox>
                <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                      prefHeight="100.0" prefWidth="350.0" spacing="20.0">
                    <children>
                        <Label prefHeight="17.0" prefWidth="125.0" text="Description"/>
                        <TextArea fx:id="DescriptionTextBox" prefHeight="100.0" prefWidth="342.0"/>
                    </children>
                </HBox>
                <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                      prefHeight="52.0" prefWidth="352.0" spacing="60.0">
                    <children>
                        <Region prefHeight="32.0" prefWidth="24.0"/>
                        <Button fx:id="AddSaveButton" mnemonicParsing="false" onAction="#handleAddSaveButtonClick"
                                prefHeight="32.0" prefWidth="77.0" text="Add/Save"/>
                        <Region prefHeight="32.0" prefWidth="10.0"/>
                        <Button fx:id="CancelButton" mnemonicParsing="false" onAction="#handleCancelButtonClick"
                                prefHeight="34.0" prefWidth="87.0" text="Cancel"/>
                    </children>
                    <padding>
                        <Insets bottom="20.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
